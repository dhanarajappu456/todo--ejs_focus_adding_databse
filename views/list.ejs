<%- include("header") -%>

<div class="box">
  <center>
    <h1><%=listTitle%></h1>
  </center>
</div>

<div class="box">
  <% itemsList.forEach(item => { %>
  <form action="/delete"  method="post">
    <div class="item">
      <input type="checkbox"  name="checks" value = "<%= item._id %>"" onChange="this.form.submit()"/ >
      <p><%= item.name %></p>
    </div>
  </form>

  <% }) %>

  <form action="/" method="post">
    <input
      type="text"
      name="textname"
      placeholder="item add"
      autocomplete="off"
    />

    <button type="submit" name="buttonname" value=<%=listTitle%>> +
    </button>
  </form>
</div>

<%- include("footer") -%>
